    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        alas=Double.parseDouble(alas_segitiga.getText());
        tinggi=Double.parseDouble(tinggi_segitiga.getText());
        luas=0.5*alas*tinggi;
        luas_segitiga.setText(String.valueOf(luas));
    }                                        

